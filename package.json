{
  "name": "electron-selecteatmenu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "package": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "docs:dev": "vitepress dev docs --port 5174",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 5174"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "electron-store": "^11.0.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^34.5.8",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitepress": "^1.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vue-tsc": "^2.1.10"
  },
  "build": {
    "appId": "com.selecteatmenu.app",
    "productName": "SelectEatMenu",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "electronDist": "node_modules/electron/dist",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SelectEatMenu",
      "include": "build/installer.nsh",
      "license": "build/license.txt"
    }
  }
}
